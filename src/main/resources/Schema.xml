<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="spring.core.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>
    <bean id="eventLogger" class="spring.core.loggers.ConsoleEventLogger"/>

    <bean id="app" class="spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>
    <bean id="event" class="spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean id="date" class="java.util.Date"/>
        </constructor-arg>
    </bean>
    <bean id="fileEventLogger" class="spring.core.loggers.FileEventLogger">
        <constructor-arg value="target/springtest/log.txt"/>
    </bean>
</beans>
